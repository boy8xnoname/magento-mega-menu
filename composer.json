{
    "name": "unet/magento-mega-menu",
    "description": "Mega menu module for Magento site",
    "type": "magento-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Duc Dao",
            "email": "huuduc.uneti@gmail.com"
        }
    ],
    "minimum-stability": "alpha",
    "require": {
        "magento-hackathon/magento-composer-installer": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.5",
        "friendsofphp/php-cs-fixer": "^2.2",
        "phpdocumentor/phpdocumentor": "^2.8"
    },
    "scripts": {
        "phpcs": "php vendor/bin/phpcs --standard=Zend app/code/",
        "phpcs-fixer": "php vendor/bin/php-cs-fixer fix app/code/",
        "phpdoc": "php vendor/bin/phpdoc -d . -t docs/api"
    },
    "extra": {
        "magento-root-dir": "root"
    }
}
